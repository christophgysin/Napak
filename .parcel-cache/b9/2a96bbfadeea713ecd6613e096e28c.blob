.otc-navigation {
    background: var(--color-theme-color1);
    color: var(--color-white);
    transform: translateX(100vw);
    transition: transform .3s ease-in-out;
    position: absolute;
    top: 0;
    width: 75vw;
    height: 100vh;
    z-index: 9999;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    font-family: Roboto;
    backdrop-filter: blur(0);
	will-change: transform;
}

.otc .otc-navigation>nav {
	opacity: 1;
	pointer-events: all;
}
.otc-navigation>nav {
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
	background: var(--color-black);
	z-index: 999;
	height: 50px;
	opacity: 0;
	pointer-events: none;
	transition: opacity .3s ease-in-out;
}

.otc-navigation>nav:before, .otc-navigation>nav:after {
	position: absolute;
	left: 50%;
	top: 25%;
	content: ' ';
	height: 25px;
	width: 1px;
	background-color: #fff;
	transform: rotate(45deg) translate3d(-50%, 0, 0)
  }
  .otc-navigation>nav:after {
	transform: rotate(-45deg);
  }
.otc-links-container {
	width: 100%;
	height: 100%;
	width: 100%;
	display: grid;
	grid-template-rows: auto auto auto 1fr;
}

.otc-links-container .sidenav-links {
	align-self: flex-end;
	position: relative;
	color: var(--color-white);
	margin: 0;
	font-family: 'IBM Plex Mono';
	font-size: 12px;
	font-weight: 300;
	padding-bottom: 50px;
}

.otc-links-container H2 {
	text-align: center;
}

.otc-links-container .sidenav-links A {
    display: block;
    width: 100%;
    text-align: center;
    padding: 10px 0;
	position: relative;
	text-transform: uppercase;
	background: var(--color-theme-color3);
	color: var(--color-white);
}

.otc-links-container .sidenav-links A.selected {
	background: var(--color-theme-color2);
	color: var(--color-black)
}

.otc-links-container .sidenav-links A SPAN {
	position: relative;
}


.logo-container {
	position: relative;
	padding: var(--padding-base);
	text-align: center;
	color: var(--color-white);
}
.logo-container .logo {
	height: 2em;
	opacity: 0.9;
}

.logo-container SPAN {
	font-size: .75em;
	position: absolute;
	margin-top: 1.75em;
	white-space: pre;
}

.login-info, .settings {
	position: relative;
	color: var(--color-white);
	margin: 0;
	font-family: 'IBM Plex Mono';
	font-size: 12px;
	font-weight: 300;
	padding: var(--padding-base);
	text-align: center;
	width: 100%;
}

.login-info h3 {
	margin: 0 0 10px;
}

.page-settings h3 {
	margin: 20px auto 0;
	text-align: center;
}

.otc-navigation .on-off-selector {
	width: 100%;
}

.otc-navigation .on-off-switch {
	background: rgba(255, 255, 255, .4);
}


.navi-shadow {
	position: absolute;
	top: 0;
	left: 0;
	bottom: 0;
	right: 0;
	background: rgba(0, 0, 0, .0);
	z-index: 997;
	transition: all 300ms ease-in-out;
	pointer-events: none;
}

BODY.footer-pulldown .page-content .navi-shadow {
	background: rgba(0, 0, 0, .6);
	pointer-events: all;
}

BODY.otc .navi-shadow {
	background: rgba(0, 0, 0, .6);
	pointer-events: all;
}


.login-page:after {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	content: "";
	background: url('5f6581eb76acf309a85e86c7f683b818');
	pointer-events: none;
	background-size: cover;
	background-position: center center;
	background-repeat: no-repeat;
	mix-blend-mode: screen;
	filter: grayscale(1);
	z-index: 1;
	opacity: 0.1;
}


.sidenav-links {
	padding: 0;
	display: flex;
	flex-direction: column;
	justify-content: flex-end;
	width: 100%;
	height: 100%;
}

.otc .otc-navigation {
	transform: translateX(25vw);
}

.otc-links-container {
	height: 100%;
	width: 100%;
	display: flex;
	flex-direction: column;
}

@supports(padding: max(0px)) {
	.otc-navigation  {
		padding-bottom: max(20px, env(safe-area-inset-bottom));
		padding-top: max(20px, env(safe-area-inset-top));
	}
	.otc-navigation>nav {
		bottom: max(20px, env(safe-area-inset-bottom));
	}
	.otc-navigation:after {
		display: block;
		content: "";
		width: 100%;
		height: max(20px, env(safe-area-inset-bottom));
		background: var(--color-black);
		bottom: 0;
		position: absolute;
		opacity: 0;
		transition: transform .3s ease-in-out;
	}

	.otc .otc-navigation:after {
		opacity: 1;
	}
	
}